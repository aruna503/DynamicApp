<plugin id="cordova-plugin-dynamicappicon" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Dynamic App Icon Switcher</name>

    <js-module src="www/DynamicIcon.js" name="DynamicIcon">
        <clobbers target="DynamicIcon" />
    </js-module>

    <platform name="android">
        <source-file 
            src="src/android/com/outsystems/dynamicappicon/DynamicIcon.java" 
            target-dir="com/outsystems/dynamicappicon" />

        <resource-file src="res/mipmap-hdpi/ic_launcher_normal.png" target="res/mipmap-hdpi/" />
        <resource-file src="res/mipmap-hdpi/ic_launcher_premium.png" target="res/mipmap-hdpi/" />
        <resource-file src="res/mipmap-hdpi/ic_launcher_private.png" target="res/mipmap-hdpi/" />

        <resource-file src="res/mipmap-mdpi/ic_launcher_normal.png" target="res/mipmap-mdpi/" />
        <resource-file src="res/mipmap-mdpi/ic_launcher_premium.png" target="res/mipmap-mdpi/" />
        <resource-file src="res/mipmap-mdpi/ic_launcher_private.png" target="res/mipmap-mdpi/" />

        <resource-file src="res/mipmap-xhdpi/ic_launcher_normal.png" target="res/mipmap-xhdpi/" />
        <resource-file src="res/mipmap-xhdpi/ic_launcher_premium.png" target="res/mipmap-xhdpi/" />
        <resource-file src="res/mipmap-xhdpi/ic_launcher_private.png" target="res/mipmap-xhdpi/" />

        <resource-file src="res/mipmap-xxhdpi/ic_launcher_normal.png" target="res/mipmap-xxhdpi/" />
        <resource-file src="res/mipmap-xxhdpi/ic_launcher_premium.png" target="res/mipmap-xxhdpi/" />
        <resource-file src="res/mipmap-xxhdpi/ic_launcher_private.png" target="res/mipmap-xxhdpi/" />

        <resource-file src="res/mipmap-xxxhdpi/ic_launcher_normal.png" target="res/mipmap-xxxhdpi/" />
        <resource-file src="res/mipmap-xxxhdpi/ic_launcher_premium.png" target="res/mipmap-xxxhdpi/" />
        <resource-file src="res/mipmap-xxxhdpi/ic_launcher_private.png" target="res/mipmap-xxxhdpi/" />
    </platform>
</plugin>
