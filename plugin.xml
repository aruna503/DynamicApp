<plugin xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-dynamicappicon"
        version="1.0.0">

    <name>Dynamic App Icon Switcher</name>

    <js-module src="www/DynamicIcon.js" name="DynamicIcon">
        <clobbers target="DynamicIcon" />
    </js-module>

    <platform name="android">

        <!-- Java file -->
        <source-file 
            src="src/android/com/outsystems/dynamicappicon/DynamicIcon.java"
            target-dir="app/src/main/java/com/outsystems/dynamicappicon" />

        <!-- Icon resources -->
        <resource-file src="res/mipmap-hdpi/ic_launcher_normal.png"
                       target="app/src/main/res/mipmap-hdpi/ic_launcher_normal.png" />
        <resource-file src="res/mipmap-hdpi/ic_launcher_premium.png"
                       target="app/src/main/res/mipmap-hdpi/ic_launcher_premium.png" />
        <resource-file src="res/mipmap-hdpi/ic_launcher_private.png"
                       target="app/src/main/res/mipmap-hdpi/ic_launcher_private.png" />

        <resource-file src="res/mipmap-mdpi/ic_launcher_normal.png"
                       target="app/src/main/res/mipmap-mdpi/ic_launcher_normal.png" />
        <resource-file src="res/mipmap-mdpi/ic_launcher_premium.png"
                       target="app/src/main/res/mipmap-mdpi/ic_launcher_premium.png" />
        <resource-file src="res/mipmap-mdpi/ic_launcher_private.png"
                       target="app/src/main/res/mipmap-mdpi/ic_launcher_private.png" />

        <resource-file src="res/mipmap-xhdpi/ic_launcher_normal.png"
                       target="app/src/main/res/mipmap-xhdpi/ic_launcher_normal.png" />
        <resource-file src="res/mipmap-xhdpi/ic_launcher_premium.png"
                       target="app/src/main/res/mipmap-xhdpi/ic_launcher_premium.png" />
        <resource-file src="res/mipmap-xhdpi/ic_launcher_private.png"
                       target="app/src/main/res/mipmap-xhdpi/ic_launcher_private.png" />

        <resource-file src="res/mipmap-xxhdpi/ic_launcher_normal.png"
                       target="app/src/main/res/mipmap-xxhdpi/ic_launcher_normal.png" />
        <resource-file src="res/mipmap-xxhdpi/ic_launcher_premium.png"
                       target="app/src/main/res/mipmap-xxhdpi/ic_launcher_premium.png" />
        <resource-file src="res/mipmap-xxhdpi/ic_launcher_private.png"
                       target="app/src/main/res/mipmap-xxhdpi/ic_launcher_private.png" />

        <resource-file src="res/mipmap-xxxhdpi/ic_launcher_normal.png"
                       target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_normal.png" />
        <resource-file src="res/mipmap-xxxhdpi/ic_launcher_premium.png"
                       target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_premium.png" />
        <resource-file src="res/mipmap-xxxhdpi/ic_launcher_private.png"
                       target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_private.png" />

    </platform>

</plugin>
