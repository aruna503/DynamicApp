<platform name="android">

    <!-- Tell Cordova which Java class implements the plugin -->
    <config-file target="config.xml" parent="/*">
        <feature name="DynamicIcon">
            <param name="android-package" value="com.outsystems.dynamicappicon.DynamicIcon" />
            <param name="onload" value="true" />
        </feature>
    </config-file>

    <!-- Java file -->
    <source-file
        src="src/android/com/outsystems/dynamicappicon/DynamicIcon.java"
        target-dir="app/src/main/java/com/outsystems/dynamicappicon" />

    <!-- your resource-file entries stay as you already have them -->
    <resource-file src="res/mipmap-hdpi/ic_launcher_normal.png"   target="app/src/main/res/mipmap-hdpi/ic_launcher_normal.png" />
    <resource-file src="res/mipmap-hdpi/ic_launcher_premium.png"  target="app/src/main/res/mipmap-hdpi/ic_launcher_premium.png" />
    <resource-file src="res/mipmap-hdpi/ic_launcher_private.png"  target="app/src/main/res/mipmap-hdpi/ic_launcher_private.png" />

    <resource-file src="res/mipmap-mdpi/ic_launcher_normal.png"   target="app/src/main/res/mipmap-mdpi/ic_launcher_normal.png" />
    <resource-file src="res/mipmap-mdpi/ic_launcher_premium.png"  target="app/src/main/res/mipmap-mdpi/ic_launcher_premium.png" />
    <resource-file src="res/mipmap-mdpi/ic_launcher_private.png"  target="app/src/main/res/mipmap-mdpi/ic_launcher_private.png" />

    <resource-file src="res/mipmap-xhdpi/ic_launcher_normal.png"  target="app/src/main/res/mipmap-xhdpi/ic_launcher_normal.png" />
    <resource-file src="res/mipmap-xhdpi/ic_launcher_premium.png" target="app/src/main/res/mipmap-xhdpi/ic_launcher_premium.png" />
    <resource-file src="res/mipmap-xhdpi/ic_launcher_private.png" target="app/src/main/res/mipmap-xhdpi/ic_launcher_private.png" />

    <resource-file src="res/mipmap-xxhdpi/ic_launcher_normal.png"   target="app/src/main/res/mipmap-xxhdpi/ic_launcher_normal.png" />
    <resource-file src="res/mipmap-xxhdpi/ic_launcher_premium.png"  target="app/src/main/res/mipmap-xxhdpi/ic_launcher_premium.png" />
    <resource-file src="res/mipmap-xxhdpi/ic_launcher_private.png"  target="app/src/main/res/mipmap-xxhdpi/ic_launcher_private.png" />

    <resource-file src="res/mipmap-xxxhdpi/ic_launcher_normal.png"   target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_normal.png" />
    <resource-file src="res/mipmap-xxxhdpi/ic_launcher_premium.png"  target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_premium.png" />
    <resource-file src="res/mipmap-xxxhdpi/ic_launcher_private.png"  target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_private.png" />

</platform>
