<?xml version="1.0" encoding="utf-8"?>
<plugin id="cordova-plugin-dynamicappicon" version="1.0.4"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
 
    <name>Dynamic App Icon Switcher</name>
 
    <!-- JS Module -->
    <js-module src="www/DynamicIcon.js" name="DynamicIcon">
        <clobbers target="DynamicIcon" />
    </js-module>
 
    <platform name="android">
 
        <!-- Register Java Plugin -->
        <config-file target="config.xml" parent="/*">
            <feature name="DynamicIcon">
                <param name="android-package" value="com.outsystems.dynamicappicon.DynamicIcon" />
            </feature>
        </config-file>
 
        <!-- Patch AndroidManifest -->
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
 
            <!-- Disable OutSystems original launcher -->
            <activity
                android:name="com.outsystemscloud.personalyybrgx5w.Test.MainActivity"
                android:enabled="false" />
 
            <!-- Normal Icon -->
            <activity-alias
                android:name="com.outsystemscloud.personalyybrgx5w.Test.IconNormal"
                android:enabled="true"
                android:exported="true"
                android:icon="@mipmap/ic_launcher"
                android:label="@string/app_name"
                android:targetActivity="com.outsystemscloud.personalyybrgx5w.Test.MainActivity">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity-alias>
 
            <!-- Premium Icon -->
            <activity-alias
                android:name="com.outsystemscloud.personalyybrgx5w.Test.IconPremium"
                android:enabled="false"
                android:exported="true"
                android:icon="@mipmap/ic_launcher"
                android:label="@string/app_name"
                android:targetActivity="com.outsystemscloud.personalyybrgx5w.Test.MainActivity">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity-alias>
 
            <!-- Private Icon -->
            <activity-alias
                android:name="com.outsystemscloud.personalyybrgx5w.Test.IconPrivate"
                android:enabled="false"
                android:exported="true"
                android:icon="@mipmap/ic_launcher"
                android:label="@string/app_name"
                android:targetActivity="com.outsystemscloud.personalyybrgx5w.Test.MainActivity">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity-alias>
 
        </config-file>
 
        <!-- Java Source -->
        <source-file src="src/android/com/outsystems/dynamicappicon/DynamicIcon.java"
                     target-dir="com/outsystems/dynamicappicon" />
 
    </platform>
 
</plugin>
 
